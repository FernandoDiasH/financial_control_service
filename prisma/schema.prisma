generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model CreditConfig {
  id                 Int      @id @default(autoincrement())
  id_user            String   @db.Text
  description        String   @db.VarChar(255)
  limit_credit       Float    @db.Float
  day_due            Int      @db.Int()
  day_credit_closing Int      @db.Int()
  credit             Credit[]
}

model Credit {
  id                 Int      @id @default(autoincrement())
  id_user           String       @db.Text
  id_category       Int
  id_credit_config  Int
  description       String       @db.VarChar(255)
  installment_value Float        @db.Float
  dt_due            DateTime     @db.DateTime()
  credit_status     DateTime?    @db.Timestamp()
  credit_Config     CreditConfig @relation(fields: [id_credit_config], references: [id])
  category          Category     @relation(fields: [id_category], references: [id])

  @@index([id_category], map: "Credit_category_id_fkey")
}

enum TypeCategory {
  Entrada
  Saida
}

model Category {
  id            Int          @id @default(autoincrement())
  id_user       String       @db.Text
  description   String       @db.VarChar(255)
  type_category TypeCategory
  credit        Credit[]
  debit         Debit[]
}

model Debit {
  id          Int      @id @default(autoincrement())
  id_user     String   @db.Text
  id_category Int
  description String   @db.VarChar(255)
  value       Float
  dt_purchase DateTime @db.DateTime()
  category    Category @relation(fields: [id_category], references: [id])

  @@index([id_category], map: "Debit_category_id_fkey")
}
